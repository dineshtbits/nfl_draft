<h3>Results - By Team</h3>
<div>
  <span class="font-bold">Select Team: </span>
  <select id="teams" onChange="window.location.href=this.value">
    <%@teams.each do |team|%>
        <option <%=params[:team_id].to_i.eql?(team.id) ? 'selected' : ''%> value="<%=@draft.id%>?team_id=<%=team.id%>"><%=team.name%></option>
    <%end%>
  </select>
</div>
<% if @results[:by_team].count > 0%>
    <div class="table-margin">
      <table class="table-fill">
        <thead>
        <tr>
          <th class="text-left">Pick</th>
          <th class="text-left">Team</th>
          <th class="text-left">Player</th>
          <th class="text-left">Position</th>
        </tr>
        </thead>
        <tbody class="table-hover">
        <%@results[:by_team].each do |result| %>
            <tr>
              <td class="text-left"><%= result.pick %></td>
              <td class="text-left"><%= result.team.name %></td>
              <td class="text-left"><%= result.player.name %></td>
              <td class="text-left"><%= result.player.position%></td>
            </tr>
        <%end%>
        </tbody>
      </table>
    </div>
<%else%>
    No results found.
<%end%>

