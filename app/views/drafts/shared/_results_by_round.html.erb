<h3>Results - By Round</h3>
<div>
  <span class="font-bold">Select Round: </span>
  <% (1..7).each do |i| %>
      <span class="<%= params[:round].to_i.eql?(i) ? 'page-selected' : '' %>"><a href="<%= @draft.id %>?round=<%= i %>"><%= i %></a></span>
  <% end %>
</div>
<% if @results[:by_round].count > 0 %>
    <div class="table-margin">
      <table class="table-fill">
        <thead>
        <tr>
          <th class="text-left">Pick</th>
          <th class="text-left">Team</th>
          <th class="text-left">Player</th>
          <th class="text-left">Position</th>
        </tr>
        </thead>
        <tbody class="table-hover">
        <% @results[:by_round].each do |result| %>
            <tr>
              <td class="text-left"><%= result.pick %></td>
              <td class="text-left"><%= result.team.name %></td>
              <td class="text-left"><%= result.player.name %></td>
              <td class="text-left"><%= result.player.position %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% else %>
    No results found.
<% end %>

